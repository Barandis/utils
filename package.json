{
  "name": "@barandis/utils",
  "version": "1.0.0",
  "description": "Various utility functions I've come across/made up over the years",
  "main": "src/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && npm run bundle",
    "bundle:dev": "cross-env NODE_ENV=development webpack --progress --colors --config webpack.dev.js",
    "bundle:prod": "cross-env NODE_ENV=production webpack --progress --colors --config webpack.prod.js",
    "bundle": "npm run bundle:dev && npm run bundle:prod",
    "commit": "npx git-cz",
    "fix": "eslint ./src ./test --fix",
    "lint": "eslint ./src ./test",
    "test": "cross-env NODE_PATH=./src NODE_ENV=test mocha ./test --require @babel/register --reporter dot --recursive",
    "debug": "cross-env NODE_PATH=./src NODE_ENV=test DEBUG=1 mocha ./test --require @babel/register --reporter dot --recursive",
    "cover": "cross-env NODE_PATH=./src NODE_ENV=test nyc mocha ./test --require @babel/register --reporter dot --recursive",
    "check": "cross-env NODE_PATH=./src NODE_ENV=test nyc --check-coverage --lines 90 --branches 90 --functions 90 --statements 90 mocha ./test --require @babel/register --reporter dot --recursive"
  },
  "keywords": [
    "util",
    "utils",
    "utility",
    "utilities"
  ],
  "author": "Thomas Otterson <tjotterson@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/Barandis/utils.git"
  },
  "bugs": {
    "url": "https://github.com/Barandis/utils/issues"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.11.6",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/preset-env": "^7.11.5",
    "@babel/register": "^7.11.5",
    "@babel/runtime": "^7.11.2",
    "@istanbuljs/nyc-config-babel": "^3.0.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-istanbul": "^6.0.0",
    "babel-plugin-webpack-alias-7": "^0.1.1",
    "chai": "^4.2.0",
    "commitizen": "^4.2.1",
    "cross-env": "^7.0.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.9.0",
    "eslint-import-resolver-webpack": "^0.12.2",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "sinon": "^9.0.3",
    "sinon-chai": "^3.5.0",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^5.1.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run test",
      "pre-push": "lint-staged && npm run check"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-babel",
    "all": true,
    "include": [
      "src/**/*.js"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  },
  "browserslist": [
    "defaults",
    "not ie 11",
    "not ie_mob 11",
    "maintained node versions"
  ]
}
